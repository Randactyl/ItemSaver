<GuiXml>
	<Controls>
		<TopLevelControl name="ItemSaverDialog" inherits="ZO_CustomDialogBase">
			<OnInitialized>
				ItemSaver_SetupDialog(self)
			</OnInitialized>

			<Controls>
				<Label name="$(parent)NameLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="Enter Name:">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Divider" relativePoint="LEFT" offsetX="40" offsetY="5" />
                </Label>
                <EditBox name="$(parent)NameEditbox" font="ZoFontGame" inherits="ZO_DefaultEdit" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
					<Anchor point="LEFT" relativeTo="$(parent)NameLabel" relativePoint="RIGHT" offsetX="13" />
					<Dimensions x="160" y="26" />
					<Controls>
						<Backdrop name="$(parent)Backdrop" inherits="ZO_EditBackdrop">
							<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" />
							<Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="RIGHT" />
						</Backdrop>
					</Controls>
				</EditBox>

				<Label name="$(parent)IconLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="Select Icon:">
					<Anchor point="TOPLEFT" relativeTo="$(parent)NameLabel" relativePoint="BOTTOMLEFT" offsetY="16" />
                </Label>
                <Control name="$(parent)IconSelectDropdown" inherits="ZO_ComboBox">
					<Anchor point="LEFT" relativeTo="$(parent)IconLabel" relativePoint="RIGHT" offsetX="16" />
					<Dimensions x="160" y="26" />
				</Control>

				<!--<Label name="$(parent)IconColorLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="Select Icon Color:">
					<Anchor point="TOPLEFT" relativeTo="$(parent)IconLabel" relativePoint="BOTTOMLEFT" offsetY="16" />
                </Label>
                <Control name="$(parent)IconColorPicker" mouseEnabled="true">
					<Dimensions x="40" y="26" />
					<Anchor point="LEFT" relativeTo="$(parent)IconColorLabel" relativePoint="RIGHT" offsetX="16" />
					<Controls>
						<Texture name="$(parent)Texture" layer="2">
							<Dimensions x="36" y="22" />
							<Anchor point="LEFT" offsetX="4" />
						</Texture>

						<Texture name="$(parent)Border" textureFile="EsoUI/Art/ChatWindow/chatOptions_bgColSwatch_frame.dds">
							<TextureCoords left="0" right="0.625" top="0" bottom="0.8125" />
							<Dimensions x="40" y="26" />
							<Anchor point="CENTER" relativeTo="$(parent)Texture" />
						</Texture>
					</Controls>
					<OnMouseUp>
						ItemSaver_ColorPicker(self, button, upInside)
					</OnMouseUp>
				</Control>-->

				<Label name="$(parent)SelectFiltersLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="Select Filters:">
					<Anchor point="TOPLEFT" relativeTo="$(parent)IconLabel" relativePoint="BOTTOMLEFT" offsetY="16" />
                </Label>

				<Label name="$(parent)FilterStoreLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="SI_ITEMSAVER_FILTERS_STORE_LABEL">
					<Anchor point="TOPLEFT" relativeTo="$(parent)SelectFiltersLabel" relativePoint="BOTTOMLEFT" offsetY="16" />
				</Label>
                <Button name="$(parent)FilterStoreButton" inherits="ZO_CheckButton" text="Filter Store?">
					<Anchor point="LEFT" relativeTo="$(parent)FilterStoreLabel" relativePoint="RIGHT" offsetX="16" />
				</Button>

				<Label name="$(parent)FilterDeconstructionLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="SI_ITEMSAVER_FILTERS_DECONSTRUCTION_LABEL">
					<Anchor point="LEFT" relativeTo="$(parent)FilterStoreButton" relativePoint="RIGHT" offsetX="54" />
				</Label>
				<Button name="$(parent)FilterDeconstructionButton" inherits="ZO_CheckButton">
					<Anchor point="LEFT" relativeTo="$(parent)FilterDeconstructionLabel" relativePoint="RIGHT" offsetX="16" />
				</Button>

				<Label name="$(parent)FilterResearchLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="SI_ITEMSAVER_FILTERS_RESEARCH_LABEL">
					<Anchor point="TOPLEFT" relativeTo="$(parent)FilterStoreLabel" relativePoint="BOTTOMLEFT" offsetX="0" />
				</Label>
				<Button name="$(parent)FilterResearchButton" inherits="ZO_CheckButton">
					<Anchor point="LEFT" relativeTo="$(parent)FilterResearchLabel" relativePoint="RIGHT" offsetX="16" />
				</Button>

				<Label name="$(parent)FilterGuildStoreLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="SI_ITEMSAVER_FILTERS_GUILDSTORE_LABEL">
					<Anchor point="LEFT" relativeTo="$(parent)FilterResearchButton" relativePoint="RIGHT" offsetX="16" />
				</Label>
				<Button name="$(parent)FilterGuildStoreButton" inherits="ZO_CheckButton">
					<Anchor point="LEFT" relativeTo="$(parent)FilterGuildStoreLabel" relativePoint="RIGHT" offsetX="16" />
				</Button>

				<Label name="$(parent)FilterMailLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="SI_ITEMSAVER_FILTERS_MAIL_LABEL">
					<Anchor point="TOPLEFT" relativeTo="$(parent)FilterResearchLabel" relativePoint="BOTTOMLEFT" offsetX="0" />
				</Label>
				<Button name="$(parent)FilterMailButton" inherits="ZO_CheckButton">
					<Anchor point="LEFT" relativeTo="$(parent)FilterMailLabel" relativePoint="RIGHT" offsetX="16" />
				</Button>

				<Label name="$(parent)FilterTradeLabel" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" horizontalAlignment="LEFT" modifyTextType="UPPERCASE" text="SI_ITEMSAVER_FILTERS_TRADE_LABEL">
					<Anchor point="LEFT" relativeTo="$(parent)FilterMailButton" relativePoint="RIGHT" offsetX="55" />
				</Label>
				<Button name="$(parent)FilterTradeButton" inherits="ZO_CheckButton">
					<Anchor point="LEFT" relativeTo="$(parent)FilterTradeLabel" relativePoint="RIGHT" offsetX="16" />
				</Button>

				<Control name="$(parent)Cancel" inherits="ZO_CustomDialogButton" />
				<Control name="$(parent)Create" inherits="ZO_CustomDialogButton" />
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
